{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"], // Added lib for completeness with Next.js
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Kept existing strictness settings, can be true for new projects
    "forceConsistentCasingInFileNames": true, // Good practice
    "esModuleInterop": true, // Often needed
    // Retaining some existing user settings if not conflicting
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
